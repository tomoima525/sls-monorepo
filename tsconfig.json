{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "exclude": ["node_modules/**/*", ".vscode/**/*"]
}
